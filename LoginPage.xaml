<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiPhone.LoginPage"
             Shell.TabBarIsVisible="False"
             Title="LoginPage">
    <StackLayout Margin="20">
        <Label Text="LOG IN" FontAttributes="Bold" />
        <Label Text="Email: " FontAttributes="Bold" />
        <Entry x:Name="emailEntry" Placeholder="Email" />
        <Label Text="Parola: " FontAttributes="Bold" />
        <Entry x:Name="parolaEntry" Placeholder="Parola" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginButtonClicked" />

        <Button Text="Autentifica-te" Clicked="OnSignButtonClicked" />

    </StackLayout>
</ContentPage>