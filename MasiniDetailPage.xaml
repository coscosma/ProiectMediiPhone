<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiPhone.MasiniDetailPage"
             Title="Detalii masini">
    <StackLayout Margin="20">
        <Label Text="Marca: " FontAttributes="Bold" />
        <Label Text="{Binding Marca}" />

        <Label Text="Model: " FontAttributes="Bold" />
        <Label Text="{Binding Model}" />

        <Label Text="Tip Combustibil: " FontAttributes="Bold" />
        <Label Text="{Binding TipCombustibil}" />

        <Label Text="Categorie: " FontAttributes="Bold" />
        <Label Text="{Binding Categorie}" />

        <Label Text="Culoare: " FontAttributes="Bold" />
        <Label Text="{Binding Culoare}" />

        <Label Text="Putere: " FontAttributes="Bold" />
        <Label Text="{Binding Putere}" />

        <Label Text="Numar de locuri: " FontAttributes="Bold" />
        <Label Text="{Binding NrLocuri}" />

        <Label Text="An: " FontAttributes="Bold" />
        <Label Text="{Binding An}" />

        <Label Text="Pret: " FontAttributes="Bold" />
        <Label Text="{Binding Pret}" />

        <Button Text="Edit" Clicked="OnEditButtonClicked" />
        <Button Text="Delete" Clicked="OnDeleteButtonClicked" />
    </StackLayout>
</ContentPage>